ZSH=$HOME/.oh-my-zsh
ZSH_THEME="stein_inge"

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

alias brewski='brew update && brew upgrade; brew upgrade --greedy && brew cleanup; brew doctor; brew doctor --verbose;'

alias pass=gopass
alias pip=pip3

fpath=(/usr/local/share/zsh-completions $fpath)

plugins=(
  git
)

source $ZSH/oh-my-zsh.sh

PATH=$PATH:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin
PATH=$PATH:~/bin

export EDITOR=/usr/bin/vim

export GOPATH=~/src/go
export GOBIN=$GOPATH/bin
PATH=$GOBIN:$PATH:/usr/local/opt/go/libexec/bin

export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
export CORDOVA_JAVA_HOME=$(/usr/libexec/java_home)

export ANDROID_SDK_ROOT="/usr/local/share/android-sdk"
ANDROID_HOME="/usr/local/share/android-sdk"
export ANT_HOME=/usr/local/opt/ant/libexec
export MAVEN_HOME=/usr/local/opt/maven
export GRADLE_HOME=/usr/local/opt/gradle

export PATH=$ANT_HOME/bin:$PATH
export PATH=$MAVEN_HOME/bin:$PATH
export PATH=$GRADLE_HOME/bin:$PATH
export PATH=$ANDROID_SDK_ROOT/platform-tools:$PATH
export PATH=$ANDROID_SDK_ROOT/cmdline-tools/latest/bin:$PATH
export PATH=$ANDROID_SDK_ROOT/platform-tools:$PATH
export PATH=$ANDROID_SDK_ROOT/build-tools:$PATH
export PATH=$ANDROID_SDK_ROOT/emulator:$PATH
export PATH=~/Library/Python/2.7/bin:$PATH
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

export PATH

export HKRAFT_SCRIPT_DIR=~/src/hkraft/hkraft-dev/scripts

export GPG_TTY=$(tty)

export PATH="/usr/local/opt/llvm/bin:$PATH"
